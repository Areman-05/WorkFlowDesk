<UserControl x:Class="WorkFlowDesk.UI.Views.ReportesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Reportes y Estadísticas" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,30"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <UniformGrid Columns="2" Rows="2">
                <!-- Estadísticas de Empleados -->
                <Border Background="#3498DB" 
                        CornerRadius="5" 
                        Padding="20" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="Empleados" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        <ItemsControl ItemsSource="{Binding EstadisticasEmpleados}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding Key}" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   Width="150"/>
                                        <TextBlock Text="{Binding Value}" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Estadísticas de Proyectos -->
                <Border Background="#2ECC71" 
                        CornerRadius="5" 
                        Padding="20" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="Proyectos" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        <ItemsControl ItemsSource="{Binding EstadisticasProyectos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding Key}" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   Width="150"/>
                                        <TextBlock Text="{Binding Value}" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Estadísticas de Tareas -->
                <Border Background="#E74C3C" 
                        CornerRadius="5" 
                        Padding="20" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="Tareas" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        <ItemsControl ItemsSource="{Binding EstadisticasTareas}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding Key}" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   Width="150"/>
                                        <TextBlock Text="{Binding Value}" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Estadísticas de Clientes -->
                <Border Background="#9B59B6" 
                        CornerRadius="5" 
                        Padding="20" 
                        Margin="5">
                    <StackPanel>
                        <TextBlock Text="Clientes" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,15"/>
                        <ItemsControl ItemsSource="{Binding EstadisticasClientes}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,5">
                                        <TextBlock Text="{Binding Key}" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   Width="150"/>
                                        <TextBlock Text="{Binding Value}" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </ScrollViewer>
    </Grid>
</UserControl>
