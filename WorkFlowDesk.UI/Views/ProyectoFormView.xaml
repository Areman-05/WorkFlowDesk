<UserControl x:Class="WorkFlowDesk.UI.Views.ProyectoFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:WorkFlowDesk.UI.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding Titulo}"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Nombre *" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="{x:Static helpers:FormTooltips.NombreProyecto}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="DescripciÃ³n" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="{x:Static helpers:FormTooltips.DescripcionProyecto}"
                         Style="{StaticResource ModernTextBoxStyle}"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Height="60"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Estado" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding EstadosProyecto}"
                          SelectedItem="{Binding Estado}"
                          Style="{StaticResource ModernComboBoxStyle}"
                          Margin="0,0,0,15">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <Binding Path="."
                                             Converter="{StaticResource EnumToStringConverter}"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Fecha inicio" Margin="0,0,0,5"/>
                <DatePicker SelectedDate="{Binding FechaInicio}"
                            ToolTip="{x:Static helpers:FormTooltips.FechaInicio}"
                            Style="{StaticResource ModernDatePickerStyle}"
                            Margin="0,0,0,15"/>

                <TextBlock Text="Fecha fin (opcional)" Margin="0,0,0,5"/>
                <DatePicker SelectedDate="{Binding FechaFin}"
                            ToolTip="{x:Static helpers:FormTooltips.FechaFin}"
                            Style="{StaticResource ModernDatePickerStyle}"
                            Margin="0,0,0,15"/>

                <TextBlock Text="Cliente" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Clientes}"
                          SelectedValue="{Binding ClienteId}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Nombre"
                          Style="{StaticResource ModernComboBoxStyle}"
                          Margin="0,0,0,15"/>

                <TextBlock Text="Responsable" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Empleados}"
                          SelectedValue="{Binding ResponsableId}"
                          SelectedValuePath="Id"
                          DisplayMemberPath="Nombre"
                          Style="{StaticResource ModernComboBoxStyle}"
                          Margin="0,0,0,15"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Style="{StaticResource ErrorMessageStyle}"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Guardar"
                    Command="{Binding GuardarCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,0,10,0"
                    Padding="20,8"/>
            <Button Content="Cancelar"
                    Command="{Binding CancelarCommand}"
                    Padding="20,8"/>
        </StackPanel>
    </Grid>
</UserControl>
