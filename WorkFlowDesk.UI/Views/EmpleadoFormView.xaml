<UserControl x:Class="WorkFlowDesk.UI.Views.EmpleadoFormView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:WorkFlowDesk.UI.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="{Binding Titulo}" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Nombre *" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="{x:Static helpers:FormTooltips.Nombre}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Apellidos *" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Apellidos, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="{x:Static helpers:FormTooltips.Apellidos}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Email *" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="{x:Static helpers:FormTooltips.Email}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Teléfono" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="{x:Static helpers:FormTooltips.Telefono}"
                         Margin="0,0,0,15"/>

                <TextBlock Text="Departamento" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Departamento, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,15"/>

                <TextBlock Text="Cargo" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Cargo, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,15"/>

                <TextBlock Text="Estado" Margin="0,0,0,5"/>
                <ComboBox SelectedItem="{Binding Estado}" 
                          Margin="0,0,0,15">
                    <ComboBoxItem Content="Activo" Tag="Activo"/>
                    <ComboBoxItem Content="Inactivo" Tag="Inactivo"/>
                    <ComboBoxItem Content="Vacaciones" Tag="Vacaciones"/>
                    <ComboBoxItem Content="Baja" Tag="Baja"/>
                </ComboBox>

                <TextBlock Text="Fecha de Contratación *" Margin="0,0,0,5"/>
                <DatePicker SelectedDate="{Binding FechaContratacion}" 
                            Margin="0,0,0,15"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Style="{StaticResource ErrorMessageStyle}"
                           Margin="0,10,0,0"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Guardar" 
                    Command="{Binding GuardarCommand}"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,0,10,0"
                    Padding="20,8"/>
            <Button Content="Cancelar" 
                    Command="{Binding CancelarCommand}"
                    Padding="20,8"/>
        </StackPanel>
    </Grid>
</UserControl>
