<UserControl x:Class="WorkFlowDesk.UI.Views.ConfiguracionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Configuración del Sistema" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,30"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <GroupBox Header="Configuración General" Margin="0,0,0,20">
                    <StackPanel Margin="20">
                        <TextBlock Text="Tamaño de página por defecto" 
                                   Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding DefaultPageSize, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="0,0,0,15"/>

                        <TextBlock Text="Nivel de logging" 
                                   Style="{StaticResource FormLabelStyle}"/>
                        <ComboBox SelectedItem="{Binding LogLevel}" 
                                  Style="{StaticResource ModernComboBoxStyle}"
                                  Margin="0,0,0,15">
                            <ComboBoxItem Content="Debug"/>
                            <ComboBoxItem Content="Info"/>
                            <ComboBoxItem Content="Warning"/>
                            <ComboBoxItem Content="Error"/>
                        </ComboBox>

                        <TextBlock Text="Minutos de expiración de caché" 
                                   Style="{StaticResource FormLabelStyle}"/>
                        <TextBox Text="{Binding CacheExpirationMinutes, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="0,0,0,15"/>

                        <CheckBox Content="Habilitar logging" 
                                  IsChecked="{Binding EnableLogging}"
                                  Margin="0,0,0,15"/>

                        <Button Content="Guardar Configuración" 
                                Command="{Binding GuardarConfiguracionCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Base de Datos" Margin="0,0,0,20">
                    <StackPanel Margin="20">
                        <Button Content="Crear Backup" 
                                Command="{Binding CrearBackupCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,0,10"/>
                        <Button Content="Inicializar Base de Datos" 
                                Command="{Binding InicializarBaseDatosCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"/>
                    </StackPanel>
                </GroupBox>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Style="{StaticResource ErrorMessageStyle}"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
