<Window x:Class="WorkFlowDesk.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkFlowDesk.UI"
        mc:Ignorable="d"
        Title="WorkFlowDesk" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#2C3E50">
            <StackPanel>
                <TextBlock Text="WorkFlowDesk" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Margin="15,20,15,30"
                           HorizontalAlignment="Center"/>
                
                <Button Content="Dashboard" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="Empleados" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="Proyectos" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="Tareas" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="Clientes" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="Reportes" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
                <Button Content="ConfiguraciÃ³n" 
                        Style="{StaticResource SidebarButtonStyle}"
                        Margin="10,5"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Column="1">
            <ContentControl x:Name="ContentArea"/>
        </Grid>
    </Grid>
</Window>
